---
layout: base.njk
title: LCD
---

<div class="w-[75%] mx-auto px-4">

{% set lcdSkolanPosts = posts | inCategory("lcd-skolan") %}
{% set otherPosts = posts | notInCategory("lcd-skolan") %}

{% if lcdSkolanPosts.length %}
<section class="mb-14">
  <h2 class="text-2xl font-bold mb-6">LCD-skolan</h2>
  <ul class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6 list-none p-0">
    {% for post in lcdSkolanPosts %}
      {% set featuredMedia = post._embedded["wp:featuredmedia"] %}
      {% set primaryCat = post._embedded["wp:term"][0][0] %}
      <li class="rounded-xl border border-gray-100 shadow-sm overflow-hidden hover:shadow-md transition-shadow duration-200 flex flex-col">
        <a href="/posts/{{ post.slug }}/" class="flex flex-col flex-1 group">
          {% if featuredMedia and featuredMedia[0].source_url %}
            <div class="aspect-video overflow-hidden bg-gray-100">
              {% wpImage featuredMedia[0].source_url, featuredMedia[0].alt_text, "w-full h-full object-cover group-hover:scale-105 transition-transform duration-300" %}
            </div>
          {% else %}
            <div class="aspect-video bg-gray-100 flex items-center justify-center">
              <svg xmlns="http://www.w3.org/2000/svg" class="w-14 h-14 text-gray-300" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1">
                <path stroke-linecap="round" stroke-linejoin="round" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
              </svg>
            </div>
          {% endif %}
          <div class="p-4 flex flex-col flex-1">
            <h2 class="text-base font-semibold text-gray-900 leading-snug group-hover:text-blue-600 transition-colors duration-150 mb-2 flex-1">{{ post.title.rendered | decodeHtml }}</h2>
            {% if primaryCat %}
              <div class="mt-auto">
                <span class="inline-block text-xs font-medium px-2 py-0.5 rounded-full {{ primaryCat.slug | categoryColor }}">{{ primaryCat.name }}</span>
              </div>
            {% endif %}
          </div>
        </a>
      </li>
    {% endfor %}
  </ul>
</section>
{% endif %}

{% if otherPosts.length %}
<section>
  <h2 class="text-2xl font-bold mb-6">Blogg</h2>
  <ul class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 list-none p-0">
    {% for post in otherPosts %}
      {% set featuredMedia = post._embedded["wp:featuredmedia"] %}
      {% set primaryCat = post._embedded["wp:term"][0][0] %}
      <li class="rounded-xl border border-gray-100 shadow-sm overflow-hidden hover:shadow-md transition-shadow duration-200 flex flex-col">
        <a href="/posts/{{ post.slug }}/" class="flex flex-col flex-1 group">
          {% if featuredMedia and featuredMedia[0].source_url %}
            <div class="aspect-video overflow-hidden bg-gray-100">
              {% wpImage featuredMedia[0].source_url, featuredMedia[0].alt_text, "w-full h-full object-cover group-hover:scale-105 transition-transform duration-300" %}
            </div>
          {% else %}
            <div class="aspect-video bg-gray-100 flex items-center justify-center">
              <svg xmlns="http://www.w3.org/2000/svg" class="w-14 h-14 text-gray-300" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1">
                <path stroke-linecap="round" stroke-linejoin="round" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
              </svg>
            </div>
          {% endif %}
          <div class="p-4 flex flex-col flex-1">
            <h2 class="text-base font-semibold text-gray-900 leading-snug group-hover:text-blue-600 transition-colors duration-150 mb-2 flex-1">{{ post.title.rendered | decodeHtml }}</h2>
            {% if primaryCat %}
              <div class="mt-auto">
                <span class="inline-block text-xs font-medium px-2 py-0.5 rounded-full {{ primaryCat.slug | categoryColor }}">{{ primaryCat.name }}</span>
              </div>
            {% endif %}
          </div>
        </a>
      </li>
    {% endfor %}
  </ul>
</section>
{% endif %}

</div>
